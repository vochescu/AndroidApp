<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/lv_search_line_ll_line"
        >
        <TextView
            android:id="@+id/lv_search_line_tv_default_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_red_light"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:text="@string/line_adapter_line" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/lv_report_second_layoutFavBusImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/circle2"
                android:layout_marginTop="2dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/lv_search_line_tv_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/holo_red_light"
                android:textStyle="bold"
                android:textSize="16dp"
                android:text="145"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="3dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"                />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/lv_search_line_ll_startPoint"
        android:layout_below="@id/lv_search_line_ll_line"
        >
        <TextView
            android:id="@+id/lv_search_line_tv_default_startPoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="@string/line_adapter_startingPoint"
            android:textStyle="italic"
            />

        <TextView
            android:id="@+id/lv_search_line_tv_startPoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_red_dark"
            android:textStyle="italic"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/lv_search_line_ll_endPoint"
        android:layout_below="@id/lv_search_line_ll_startPoint"
        >
        <TextView
            android:id="@+id/lv_search_line_tv_default_endPoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="@string/line_adapter_endingPoint"
            android:textStyle="italic"
            />

        <TextView
            android:id="@+id/lv_search_line_tv_endPoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_red_dark"
            android:textStyle="italic"

            />
    </LinearLayout>
    <CheckBox
        android:id="@+id/lv_search_line_radioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:button="@android:drawable/btn_radio"
        android:visibility="gone"
        />

</RelativeLayout>